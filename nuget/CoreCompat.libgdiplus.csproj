<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <Title>Native libraries for System.Drawing</Title>
    <Description>Allows you to use System.Drawing on OS X</Description>
    <PackageLicenseUrl>https://raw.githubusercontent.com/CoreCompat/libgdiplus-packaging/LICENSE</PackageLicenseUrl>
    <PackageProjectUrl>https://github.com/CoreCompat/libgdiplus-packaging</PackageProjectUrl>
    <RepositoryType>git</RepositoryType>
    <Copyright>Mono</Copyright>
    <LibgdiplusDir>$(BUILD_ARTIFACTSTAGINGDIRECTORY)/libgdiplus/</LibgdiplusDir>
  </PropertyGroup>

  <ItemGroup>
    <Content Include="$(LibgdiplusDir)/osx.10.13-x64/usr/local/lib/libgdiplus.0.dylib">
      <PackagePath>runtimes/osx.10.13-x64/native/</PackagePath>
    </Content>
    <Content Include="$(LibgdiplusDir)/osx.10.14-x64/usr/local/lib/libgdiplus.0.dylib">
      <PackagePath>runtimes/osx.10.14-x64/native/</PackagePath>
    </Content>
    <Content Include="$(LibgdiplusDir)/ubuntu.16.04-x64/usr/lib/libgdiplus.0.so">
      <PackagePath>runtimes/ubuntu.16.04-x64/native/</PackagePath>
    </Content>
    <Content Include="$(LibgdiplusDir)/ubuntu.18.04-x64/usr/lib/libgdiplus.0.so">
      <PackagePath>runtimes/ubuntu.18.04-x64/native/</PackagePath>
    </Content>
    <Content Include="$(LibgdiplusDir)/debian.9-x64/usr/lib/libgdiplus.0.so">
      <PackagePath>runtimes/debian.9-x64/native/</PackagePath>
    </Content>
    <Content Include="$(LibgdiplusDir)/centos.7-x64/usr/lib/libgdiplus.0.so">
      <PackagePath>runtimes/centos.7-x64/native/</PackagePath>
    </Content>
    <Content Include="$(LibgdiplusDir)/rhel.7-x64/usr/lib/libgdiplus.0.so">
      <PackagePath>runtimes/rhel.7-x64/native/</PackagePath>
    </Content>
    <Content Include="$(LibgdiplusDir)/fedora.29-x64/usr/lib/libgdiplus.0.so">
      <PackagePath>runtimes/fedora.29-x64/native/</PackagePath>
    </Content>
  </ItemGroup>
</Project>